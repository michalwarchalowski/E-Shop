@model CandyListViewModel


        <h1>@Model.CurrentCategory</h1>
        @foreach(var candy in Model.Candies)
        {
            <div class="col-sm-12 col-lg-4 col-md-12">
                <div class="thumbnail">
                    <img src="@candy.ImageThumnailUrl" alt="image for cany shop" />
                    <div class="caption">
                        <h3 class="pull-right">@candy.Price.ToString("c")</h3>
                        <h3><a asp-controller="Candy" asp-action="Details"
                               asp-route-id="@candy.CandyId">@candy.Name</a></h3>
                        <p>@candy.Description</p>
                    </div>
                </div>
 
            </div>
        }
