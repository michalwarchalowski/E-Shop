@model Candy

<div class="col-sm-12 col-lg-4 col-md-12">
    <div class="thumbnail">
        <img src="@Model.ImageThumnailUrl" alt="image for cany shop" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Candy" asp-action="Details"
                   asp-route-id="@Model.CandyId">@Model.Name</a>
            </h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-candyId="@Model.CandyId">Add To Cart</a>
            </p>
        </div>

    </div>

</div>